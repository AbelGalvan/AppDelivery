<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSDelivery.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Smart Delivery" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label 
            x:Name="LblText"
            Text="Aqui se mostraran los ofertones"
            FontSize="Title"
            Padding="30,10,30,10"/>
        <Button
            x:Name="BtnAboutUser"
            Text="Acerca del usuario"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
