<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSDelivery.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Smart Delivery" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label 
            x:Name="LblText"
            Text="Start developing now"
            FontSize="Title"
            Padding="30,10,30,10"/>
        <Button
            x:Name="BtnConsulta"
            Text="Consulta"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
        <Entry
            x:Name="EtyResultado"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            WidthRequest="100"/>
    </StackLayout>

</ContentPage>
